{{#if isValid}}
  <div>
    <h1>Todos los productos</h1>
    <div class='container text-center'>
      <div class='row row-cols-4 justify-content-evenly'>
        {{#each docs}}
          <div class='card' style='width: 18rem;'>
            <img src={{imageUrl}} class='card-img-top' />
            <div class='card-body'>
              <h5 class='card-title'>{{name}}</h5>
            </div>
            <ul class='list-group list-group-flush'>
              <li class='list-group-item'>${{price}}</li>
              <li class='list-group-item'>Categoria: {{category}}</li>
            </ul>
            <div class='card-body'>
              <button class='btn btn-primary'>
                Agregar alcarrito
              </button>
              <a href='/product/{{_id}}'>Ver detalle</a>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
    <nav aria-label='...' class='d-flex justify-content-center p-5'>
      <ul class='pagination'>
        {{#if hasPrevPage}}
          <li class='page-item'>
            <a class='page-link' href={{this.prevLink}}>Previous</a>
          </li>
        {{/if}}
        <li class='page-item active' aria-current='page'>
          <a class='page-link' href='#'>{{this.page}}</a>
        </li>
        {{#if hasNextPage}}
          <li class='page-item'>
            <a class='page-link' href={{this.nextLink}}>Next</a>
          </li>
        {{/if}}
      </ul>
    </nav>
  </div>
{{/if}}